/* bot avatar colors */
.msg.bot .avatar {
  background: linear-gradient(90deg,#4A7CFD,#7FD3FF);
  color: #001021;
}

/* user avatar colors */
.msg.user .avatar {
  background: rgba(255,255,255,0.10);
  color: var(--text);
}

/* timestamp */
.msg-meta {
  font-size: 11px;
  color: var(--muted);
  margin-top: 2px; /* tighter */
}

/* copy button â€” compact, inside top-right */
.msg-actions {
  position:absolute;
  right: 6px;
  top: 6px;
  opacity:0;
  transition:opacity .15s;
}

.msg:hover .msg-actions {
  opacity:1;
}

.msg-actions button {
  background: rgba(255,255,255,0.05);
  border:none;
  padding:4px 6px;
  border-radius:6px;
  font-size:12px;
  cursor:pointer;
}

.msg-actions button:hover {
  background: rgba(255,255,255,0.12);
}

/* typing */
.typing{display:flex;gap:8px;margin:8px 0}
.dot{width:10px;height:10px;border-radius:50%;background:linear-gradient(90deg,#fff,#cfe9ff);opacity:.8;animation:bounce .7s infinite alternate}
@keyframes bounce{from{transform:translateY(0)}to{transform:translateY(-6px)}}
.hidden{display:none}

/* waveform */
.waveform-wrap{margin-top:12px;height:84px}
#waveform{width:100%;height:84px;border-radius:10px;background:linear-gradient(180deg, rgba(255,255,255,0.01), rgba(0,0,0,0.02));border:1px solid rgba(255,255,255,0.03)}

/* input bar */
.input-bar{
  display:flex;align-items:center;gap:12px;position:sticky;bottom:12px;margin-top:12px;padding:12px;border-radius:14px;
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border:1px solid rgba(255,255,255,0.03);
}
.mic-btn{width:48px;height:48px;border-radius:12px;border:1px solid rgba(255,255,255,0.03);background:transparent;cursor:pointer;position:relative}
.mic-ring{position:absolute;inset:0;border-radius:12px;box-shadow:0 0 0 0 rgba(74,124,253,0.12);opacity:0;transition:opacity .15s}
.mic-btn.recording .mic-ring{animation:pulse 1.4s infinite;opacity:1}
@keyframes pulse{0%{box-shadow:0 0 0 0 rgba(74,124,253,0.12)}100%{box-shadow:0 0 0 18px rgba(74,124,253,0.02)}}

.input-wrap{flex:1}
.chat-input{width:100%;padding:12px 14px;border-radius:12px;border:1px solid rgba(255,255,255,0.04);background:rgba(255,255,255,0.02);color:var(--text);outline:none}
.chat-input:focus{box-shadow:0 8px 30px rgba(74,124,253,0.06);border-color:rgba(74,124,253,0.28)}

.send-btn{background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#021028;border:none;padding:12px;border-radius:12px;cursor:pointer;font-weight:700}

/* agent panel */
.vv-agent{height:calc(100vh - 160px);padding:16px;display:flex;flex-direction:column;gap:10px}
.agent-activity{padding:10px;border-radius:10px;background:rgba(255,255,255,0.02);font-size:13px}
.agent-tools ul{list-style:none;padding:0;margin:6px 0}
.agent-tools li{padding:8px;border-radius:8px;background:rgba(255,255,255,0.01);margin-bottom:6px}

/* overlay panes (history/settings) */
.overlay-pane{position:fixed;right:40px;top:120px;width:360px;max-height:70vh;overflow:auto;padding:12px;z-index:60}
.overlay-pane.hidden{display:none}

/* command palette */
.cmd-palette{position:fixed;left:50%;top:20%;transform:translateX(-50%);width:720px;max-width:90%;padding:12px;z-index:80}
.cmd-input{width:100%;padding:12px;border-radius:12px;border:1px solid rgba(255,255,255,0.04);background:rgba(255,255,255,0.02);color:var(--text)}
.cmd-list{margin-top:8px;max-height:280px;overflow:auto}

/* responsive */
@media (max-width:1000px){
  .chat-layout{grid-template-columns: 1fr; padding:12px}
  .vv-sidebar, .vv-agent{display:none}
  .overlay-pane{right:16px;top:90px;width:92%}
  .vv-shell{padding:6px}
}
@keyframes fadeIn{from{opacity:0;transform:translateY(6px)}to{opacity:1;transform:translateY(0)}}
