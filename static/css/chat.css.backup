}

.agent-tools {
  font-size: 12px;
}

.agent-tools strong {
  display: block;
  margin-bottom: 6px;
  color: var(--text-secondary);
}

.agent-tools ul {
  list-style: none;
  padding: 0;
}

.agent-tools li {
  padding: 6px;
  color: var(--text-muted);
}

/* Responsive */
@media (max-width: 1200px) {
  .chat-layout {
    grid-template-columns: 200px 1fr;
  }
  .vv-agent {
    display: none;
  }
}

@media (max-width: 768px) {
  .chat-layout {
