}

.agent-title {
  font-weight: 700;
  font-size: 14px;
  color: var(--text);
}

.agent-sub {
  font-size: 11px;
  color: var(--text-muted);
}

.agent-activity {
  padding: 10px;
  border-radius: var(--radius-md);
  background: rgba(255,255,255,0.03);
  border: 1px solid rgba(255,255,255,0.06);
